  "bash"
  "git"
  "gnupg"
  "pinentry-mac"
  "mc"
  "mtr"
  "htop"
  "nano"
  "tmux"
  "curl"
  "wget"
  "xz"
  "zstd"
  "coreutils"
  "cmake"
  "mas"
  "chezmoi"
  "asdf"
  "ripgrep"
  "fzf"
  "bat"
  "cheat"
  "eza"
  "fd"
  "shellcheck"
  "shfmt"
  "hadolint"
  "yq"
  "jq"
  "docker"
  "docker-compose"
  "docker-credential-helper"
  "docker-buildx"
  "colima"
  "helm"
  "kubernetes-cli"
  "kubectx"
  "awscli"
  "ansible"
  "ansible-lint"
  "bitwarden-cli"
  "go"
  "python"
